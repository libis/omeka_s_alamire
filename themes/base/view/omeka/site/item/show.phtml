      var value = $('#incipitFilter').val().toLowerCase();
      $('#chants tr.data').hide();
      $("#chants tr.data").filter(function() {       
        if($(this).text().toLowerCase().indexOf(value) > -1){
          //contains text
          $(this).show();          
          $('.hidden-folio').show();
         
         if($('#genreFilter').val()){
          if ($(this).data('genre') != $('#genreFilter').val()) {           
            $(this).hide();
          }
         }

